<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gingertech.BusStopv3.ui.Map.MapFragment"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/ic_topv2_01"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingTop="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Your Buses"
            android:textAlignment="center"
            android:textSize="42dp"
        android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Everything is configured correctly"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="#FFFFFF"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/JoinedRoute1"
        android:visibility="gone"
        android:layout_margin="8dp">


        <TextView
            android:id="@+id/JoinedRoute1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="route"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="24dp"
            android:visibility="visible"
            android:layout_weight="5"
            android:textSize="36dp"
            android:textAlignment="center"/>

        <CheckBox
            android:id="@+id/JoinedRoute1_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:clickable="false"/>


    </LinearLayout>

    <View
        android:id="@+id/firstbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/JoinedRoute2"
        android:visibility="gone"
        android:layout_margin="8dp">


        <TextView
            android:id="@+id/JoinedRoute2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="route"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="24dp"
            android:visibility="visible"
            android:layout_weight="5"
            android:textSize="36dp"
            android:textAlignment="center"/>

        <CheckBox
            android:id="@+id/JoinedRoute2_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:clickable="false"/>


    </LinearLayout>

    <View
        android:id="@+id/secondbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/JoinedRoute3"
        android:visibility="gone"
        android:layout_margin="8dp">


        <TextView
            android:id="@+id/JoinedRoute3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="route"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="24dp"
            android:visibility="visible"
            android:layout_weight="5"
            android:textSize="36dp"
            android:textAlignment="center"/>

        <CheckBox
            android:id="@+id/JoinedRoute3_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:clickable="false" />


    </LinearLayout>

    <Button
        android:id="@+id/newBusButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new buses"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:layout_margin="16dp"/>


</LinearLayout>