<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gingergear.BusStopv3.ui.BusControl.BusControlFragment"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/ic_topv2_01"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingTop="80dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/BusNumberDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="#14-71"
            android:textAlignment="center"
            android:textSize="42dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/BusDriverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Ms. Raines"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="#FFFFFF"/>


    </LinearLayout>

    <Button
        android:id="@+id/ActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to your bus"
        android:layout_marginHorizontal="48dp"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Assigned Routes"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/route1_layout"
    android:visibility="gone">

    <Button
        android:id="@+id/route1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="route"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="24dp"
        android:visibility="visible"
        android:layout_weight="5"/>

    <CheckBox
        android:id="@+id/route1_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:clickable="false"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/route2_layout"
        android:visibility="gone">


    <Button
            android:id="@+id/route2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="route"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="24dp"
            android:visibility="visible"
            android:layout_weight="5"/>

        <CheckBox
            android:id="@+id/route2_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:clickable="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/route3_layout"
        android:visibility="gone">


    <Button
            android:id="@+id/route3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="route"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="24dp"
            android:visibility="visible"
            android:layout_weight="5"/>

        <CheckBox
            android:id="@+id/route3_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:clickable="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/route4_layout"
        android:visibility="gone">


    <Button
            android:id="@+id/route4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="route"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="24dp"
            android:visibility="visible"
            android:layout_weight="5"/>

        <CheckBox
            android:id="@+id/route4_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:clickable="false"/>

    </LinearLayout>

    <Button
        android:id="@+id/EndRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="End Route"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="48dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/ResetRoutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="Reset Routes"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="48dp"
        android:visibility="invisible"/>




</LinearLayout>